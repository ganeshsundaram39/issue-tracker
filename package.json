{
  "name": "issue-tracker",
  "version": "0.0.0",
  "scripts": {
    "client": "cd issue-tracker-frontend && yarn start:dev",
    "server": "cd issue-tracker-backend && yarn start",
    "dev": "concurrently \"yarn server\" \"yarn client\"",
    "client:prod": "cd issue-tracker-frontend && yarn start:prod",
    "client:build": "cd issue-tracker-frontend && yarn build:dev",
    "client:build:prod": "cd issue-tracker-frontend && yarn build:prod",
    "format": "prettier --write .",
    "serve": "serve -s ./issue-tracker-frontend/build"
  },
  "private": true,
  "dependencies": {
    "concurrently": "^5.3.0"
  },
  "devDependencies": {
    "prettier": "2.0.5"
  }
}
